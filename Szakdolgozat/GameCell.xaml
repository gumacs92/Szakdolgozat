<UserControl x:Class="Szakdolgozat.GameCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Szakdolgozat"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="125">
    <Border x:Name="Cell" Background="Gold" BorderThickness="4,4,4,4" BorderBrush="#AA937C" 
            Width="125" Height="125">
        <TextBlock x:Name="Value" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="90" Foreground="#776E65" FontWeight="Bold"></TextBlock>
        <Border.RenderTransform>
            <TranslateTransform />
        </Border.RenderTransform>
    </Border>
</UserControl>
